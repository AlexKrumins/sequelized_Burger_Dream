<div class="col-5" id="leftburgers">
    
  <h2>Burgers that are ready to be devoured!</h2>

  <ul>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger-block}}
      {{/unless}}   
    {{/each}}
  </ul>

</div>

<div class="col-5" id="rightburgers">
  
  <h2>Burgers that have been devoured!</h2>

  <ul>
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/burger-block}}
      {{/if}}
    {{/each}}
  </ul>

</div>
