<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="author-container">
      <h1>Chefs</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th># of Posts</th>
            <th>See Chefs's Creations</th>
            <th>New Burger</th>
            <th>Delete Chef</th>
          </tr>
        </thead>
        <tbody>
            {{#each chefs}}
              {{> chefs/chef-block}}
            {{/each}}
          <tr id="form-row">
            <form class="chef-form">
              <td colspan="4">
                <input placeholder="Enter a name" id="chef-name" type="text" />
              </td>
              <td><button type="submit" class="btn btn-success">Create Chef</button>
              </td>
            </form>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>